<% if signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
      <%= image_tag(current_user.small_avatar, alt: current_user.name) %>
      <%= current_user.name %>
      <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
      <li>
        <%= link_to('Sign out', sign_out_path) %>
      </li>
    </ul>
  </li>
<% else %>
  <li>
    <%= link_to image_tag('steam_small.png', alt: 'sign in'), '/auth/steam' %>
  </li>
<% end %>